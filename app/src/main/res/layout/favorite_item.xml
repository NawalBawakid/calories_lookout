<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.calories.calorieslookout.database.CaloriesData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favoriteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20sp"
        android:gravity="center">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUrl="@{item.image}"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/disLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40sp"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40sp"
            app:srcCompat="@drawable/ic_baseline_favorite_24"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0F2467"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/poster_image"
            app:layout_constraintTop_toTopOf="parent"
            app:textset="@{item.label}" />

        <TextView
            android:id="@+id/caloriesnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#0A1A50"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="@{String.valueOf(item.calories)}"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/poster_image"
            app:layout_constraintTop_toBottomOf="@id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>