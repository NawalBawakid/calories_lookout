<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".movie.DetailsFragment">

    <data>
        <variable
            name="mealViewModel"
            type="com.calories.calorieslookout.viewModel.OverviewViewModel" />

        <variable
            name="profileFragment"
            type="com.calories.calorieslookout.ProfileFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        style="@style/background">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="370dp"
                android:layout_height="190dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/card">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="40sp"
                        imageUrl="@{mealViewModel.profileImage.toString()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/selectImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text="Select"
                        app:layout_constraintStart_toStartOf="@id/profileImage"
                        app:layout_constraintTop_toBottomOf="@id/profileImage" />

                    <TextView
                        android:id="@+id/editImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10sp"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text="Upload"
                        app:layout_constraintStart_toEndOf="@id/selectImage"
                        app:layout_constraintTop_toBottomOf="@id/profileImage"
                        app:layout_constraintEnd_toEndOf="@id/profileImage"/>

                    <TextView
                        android:id="@+id/usersName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="65sp"
                        android:text="@{mealViewModel.userNames}"
                        style="@style/title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/profileImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/usersEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15sp"
                        android:text="@{mealViewModel.userEmail}"
                        style="@style/title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/profileImage"
                        app:layout_constraintTop_toBottomOf="@id/usersName" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NotSibling"
                    style="@style/card">

                    <TextView
                        android:id="@+id/settingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:paddingTop="30sp"
                        android:paddingStart="20sp"
                        style="@style/title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1"/>

                    <ImageView
                        android:id="@+id/moon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:paddingTop="40dp"
                        android:src="@drawable/ic_baseline_nights_stay_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/settingLabel"/>

                    <TextView
                        android:id="@+id/dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark Mode"
                        android:paddingTop="40dp"
                        android:textSize="19dp"
                        android:layout_marginStart="10sp"
                        style="@style/title"
                        app:layout_constraintStart_toEndOf="@id/moon"
                        app:layout_constraintTop_toBottomOf="@id/settingLabel"/>

                    <Switch
                        android:id="@+id/switchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="40dp"
                        app:layout_constraintStart_toEndOf="@id/dark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/settingLabel"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="300dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="30sp"
                        android:background="@drawable/search_round_courner"
                        app:layout_constraintTop_toBottomOf="@+id/moon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="30sp"
                        android:src="@drawable/ic_baseline_language_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1"/>

                    <TextView
                        android:id="@+id/languageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:paddingTop="30dp"
                        android:textSize="19dp"
                        style="@style/title"
                        android:layout_marginStart="10sp"
                        app:layout_constraintStart_toEndOf="@id/language"
                        app:layout_constraintTop_toBottomOf="@id/view1"/>

                    <TextView
                        android:id="@+id/soon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Soon"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/languageTitle"
                        app:layout_constraintTop_toBottomOf="@id/languageTitle"/>

                    <Switch
                        android:id="@+id/switchLanguageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="35dp"
                        app:layout_constraintStart_toEndOf="@id/languageTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="300dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="30sp"
                        android:background="@drawable/search_round_courner"
                        app:layout_constraintTop_toBottomOf="@+id/language"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="30sp"
                        android:src="@drawable/ic_baseline_notifications_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view2"/>

                    <TextView
                        android:id="@+id/notificationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:paddingTop="30dp"
                        android:textSize="19dp"
                        style="@style/title"
                        android:layout_marginStart="10sp"
                        app:layout_constraintStart_toEndOf="@id/notification"
                        app:layout_constraintTop_toBottomOf="@id/view2"/>

                    <TextView
                        android:id="@+id/soon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Soon"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/notificationTitle"
                        app:layout_constraintTop_toBottomOf="@id/notificationTitle"/>

                    <Switch
                        android:id="@+id/switchNotificationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="35dp"
                        app:layout_constraintStart_toEndOf="@id/notificationTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view2"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="300dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="30sp"
                        android:background="@drawable/search_round_courner"
                        app:layout_constraintTop_toBottomOf="@+id/notificationTitle"
